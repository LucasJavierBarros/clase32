<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie add</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House" />
    </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br />
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <div>
                <label for="title">Title </label>
                <p><input type="text" name="title" id="title" value="<%= locals.old && old.title ? old.title : null %>"/></p>
                <p class="text-danger"><%= locals.errors && errors.title ? errors.title.msg : null %></p>
            </div>
            <div>
                <label for="rating">Rating </label>
                <p><input type="number" name="rating" id="rating" value="<%= locals.old && old.rating ? old.rating : null %>" /></p>
                <p class="text-danger"><%= locals.errors && errors.rating ? errors.rating.msg : null %></p>
            </div>
            <div>
                <label for="awards">Awards </label>
                <p><input type="number" name="awards" id="awards" value="<%= locals.old && old.awards ? old.awards : null %>" /></p>
                <p class="text-danger"><%= locals.errors && errors.awards ? errors.awards.msg : null %></p>
            </div>
            <div>
                <label for="release_date">Release date </label>
                <p><input type="date" name="release_date" id="release_date" value="<%= locals.old && old.release_date ? old.release_date : null %>"/></p>
                <p class="text-danger"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></p>
            </div>
            <div>
                <label for="length">Length </label>
                <p><input type="number" name="length" id="length" value="<%= locals.old && old.length ? old.length : null %>" /></p>
                <p class="text-danger"><%= locals.errors && errors.length ? errors.length.msg : null %></p>
            </div>
            <div>
                <label for="genre_id">Géneros</label>
                <select name="genre_id" id="genre_id">
                    <option value="">Selección de género</option>
                    <% genres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <%= locals.old && old.genre_id &&  (old.genre_id == genre.id) ? 'selected' : null %>><%= genre.name %></option>
                    <% }) %>
                </select>
                <p class="text-danger"><%= locals.errors && errors.genre_id ? errors.genre_id.msg : null %></p>
            </div>
            <br />
            <p>
                <button class="botonAgregar" type="submit">Agregar</button>

                <a class="botonVolver" href="/movies">Listado de Películas</a>
            </p>
        </form>
    </section>
</body>

</html>